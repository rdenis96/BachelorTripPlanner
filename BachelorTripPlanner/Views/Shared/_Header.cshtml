<header ng-controller="HeaderController" ng-init="init()">
    <nav class="navbar navbar-findcond navbar-static-top margin-bottom-0">
        <div class="container" ng-show="isLogged == true">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Views/Home/Index.cshtml">TripPlanner</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-fw fa-users"></i> Parties <span class="badge">{{userGroupTrips.length}}</span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li ng-repeat="userGroupTrip in userGroupTrips track by $index"><a href="../trip/tripPlanner/{{userGroupTrip.tripId}}"><i class="fa fa-fw fa-users"></i> <span class="badge">{{userGroupTrip.membersCount}}</span>{{userGroupTrip.name}}</a></li>
                        </ul>
                    </li>
                    <li class="active"><a href="../trip/createTrip">Create your Trip <span class="sr-only">(current)</span></a></li>
                    <li class="dropdown" uib-tooltip="Notifications">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-fw fa-bell"></i> <span class="badge">{{notifications.length}}</span></a>
                        <ul class="dropdown-menu" role="menu" cg-busy="getNotificationsPromise">
                            <li ng-repeat="notification in notifications track by $index">
                                <a ng-if="notification.type === notificationTypes.TripInvitation">
                                    <label>
                                        Invitation From: <span style="color:red;">{{notification.senderEmail}}</span> |
                                        Trip: <span style="color:red;">{{notification.tripName}}</span>
                                    </label>
                                    <img class="notification-img-icon" ng-click="respondNotification(notification, true)" src="https://www.pngkey.com/png/full/0-4418_image-checkmark-green-circle-check-mark.png" />
                                    <img class="notification-img-icon" ng-click="respondNotification(notification, false)" src="https://secure.webtoolhub.com/static/resources/icons/set114/97967b31.png" />
                                </a>
                                <a ng-if="notification.type === notificationTypes.FriendRequest">
                                    <label>Friend Request: <span style="color:red;">{{notification.senderEmail}}</span></label>
                                    <img class="notification-img-icon" src="https://www.pngkey.com/png/full/0-4418_image-checkmark-green-circle-check-mark.png" ng-click="respondNotification(notification, true)" />
                                    <img class="notification-img-icon" src="https://secure.webtoolhub.com/static/resources/icons/set114/97967b31.png" ng-click="respondNotification(notification, false)" />
                                </a>
                                <a ng-if="notification.type === notificationTypes.TripKicked">
                                    <label>
                                        Group Kicked: <span style="color:red;">{{notification.tripName}}</span> |
                                        Admin Email: <span style="color:red;">{{notification.senderEmail}}</span>
                                    </label>
                                    <img class="notification-img-icon" src="https://www.pngkey.com/png/full/0-4418_image-checkmark-green-circle-check-mark.png" ng-click="respondNotification(notification, true)" />
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fas fa-user-circle"></i> Account <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="../account/interests"><i class="fas fa-map-marked-alt"></i> Interests</a></li>
                            <li><a href="../account/friends"><i class="fas fa-user-friends"></i> Friends</a></li>
                            <li><a href="../account/planningHistory"><i class="fas fa-history"></i> Planning History</a></li>
                            <li class="divider"></li>
                            <li><a href="../account/editAccount"><i class="fas fa-user-edit"></i> Edit Account</a></li>
                            <li><a href="#" ng-click="logout()"><i class="fas fa-sign-out-alt"></i> Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container" ng-show="isLogged == false">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Findcond</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="#" ng-click="login()"> <i class="fa fa-user"></i> Log In <span class="sr-only">(current)</span></a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>